{% extends 'CmsBundle::layout_admin.html.twig' %}

{% block body %}
    {% embed 'templates/admin/ppal_title.html.twig' %}
        {% block titleBasic %}{{ 'Languages'|trans }}{% endblock %}
        {% block subtitleBasic %}{{ "Configure your articles"|trans }}{% endblock %}
    {% endembed %}
    {% embed 'templates/admin/panel.html.twig' %}
        {% block colPanel %}col-sm-9{% endblock %}
        {% block titlePanel %}  {{ 'Languages'|trans }} {{ 'list'|trans }}{% endblock %}
        {% block bodyPanel %}
            <table class="table table-striped table-bordered">
                <tbody>
                <tr>
                    <th>#</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>{{ 'Code'|trans }}</th>
                    <td>{{ entity.code }}</td>
                </tr>
                <tr>
                    <th>{{ 'Language'|trans }}</th>
                    <td>{{ entity.language }}</td>
                </tr>
                <tr>
                    <th>{{ 'Status'|trans }}</th>
                    <td>{% if entity.isActive == true %}
                            <i  title="Activo" class="fa fa-check-circle fa-2x" aria-hidden="true"></i>
                        {% else %}
                            <span>{{ 'Inactivo'|trans }}</span>
                        {% endif %}</td>
                </tr>
                <tr>
                    <th>{{ 'Created at'|trans }}</th>
                    <td>{{ entity.createAt|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>{{ 'Modified at'|trans }}</th>
                    <td>{{ entity.modifiedAt|date('Y-m-d H:i:s') }}</td>
                </tr>
                </tbody>
            </table>
        {% endblock %}
    {% endembed %}



        <a href="{{ path('admin_languages') }}" class="btn btn-info">
            {{ 'Volver'|trans }}
        </a>
        <a href="{{ path('admin_languages_edit', { 'id': entity.id }) }}" class="btn btn-success">
            {{ 'Editar'|trans }}
        </a>


{% endblock %}
