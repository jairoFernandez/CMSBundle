{% extends 'CmsBundle::layout_admin.html.twig' %}

{% block body %}
    {% embed 'templates/admin/ppal_title.html.twig' %}
        {% block titleBasic %}{{ 'Banner'|trans }} {{ 'list'|trans }}{% endblock %}
        {% block subtitleBasic %}{{ "Configure your banner"|trans }}{% endblock %}
    {% endembed %}
    {% embed 'templates/admin/panel.html.twig' %}
        {% block colPanel %}col-sm-9{% endblock %}
        {% block titlePanel %}{% endblock %}
        {% block bodyPanel %}
            <a href="{{ path('admin_banner_new') }}" class="btn btn-success btn-sm">
                {{ 'Create'|trans }}
            </a>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>{{ 'Name'|trans }}</th>
                        <th>{{ 'Status'|trans }}</th>
                        <th>{{ 'Actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td><a href="{{ path('admin_banner_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                            <td>{{ entity.name }}</td>
                            <td>{% if entity.isActive == true %}
                                    <i  title="Activo" class="fa fa-check-circle fa-2x" aria-hidden="true"></i>
                                {% else %}
                                    <span>{{ 'Inactivo'|trans }}</span>
                                {% endif %}</td>
                            <td>
                                <a href="{{ path('admin_banner_show', { 'id': entity.id }) }}"  class="btn btn-success btn-sx">{{ 'Ver'|trans }}</a>
                                <a href="{{ path('admin_banner_edit', { 'id': entity.id }) }}"  class="btn btn-info btn-sx">{{ 'Editar'|trans }}</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endblock %}
    {% endembed %}

 {% endblock %}
