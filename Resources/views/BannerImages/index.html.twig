{% extends 'TemasTemasBundle::admin.html.twig' %}

{% block article %}
<h1>{{ 'Banner'|trans }} {{ 'list'|trans }}</h1>
<hr>
<a href="{{ path('admin_bannerimages_new') }}" class="btn btn-success btn-sm">
    {{ 'Create'|trans }}
</a>
<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Path</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_bannerimages_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.path }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_bannerimages_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_bannerimages_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    {% endblock %}
