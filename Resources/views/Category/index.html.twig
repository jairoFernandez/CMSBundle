{% extends 'CmsBundle::layout_admin.html.twig' %}

{% block body %}
    {% embed 'templates/admin/ppal_title.html.twig' %}
        {% block titleBasic %}{{ 'Category'|trans }} {{ 'list'|trans }}{% endblock %}
        {% block subtitleBasic %}{{ "Configure your categories"|trans }}{% endblock %}
    {% endembed %}
    <h1></h1>
    {% embed 'templates/admin/panel.html.twig' %}
        {% block colPanel %}col-sm-9{% endblock %}
        {% block titlePanel %}  {{ 'Languages'|trans }} {{ 'list'|trans }}{% endblock %}
        {% block bodyPanel %}
            <hr>
            <a href="{{ path('admin_article-category_new') }}" class="btn btn-success btn-sm">
                {{ 'Create'|trans }}
            </a>
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Isactive</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('admin_article-category_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.name }}</td>
                        <td>{{ entity.description }}</td>
                        <td>{% if entity.isActive == true %}
                                <i  title="Activo" class="fa fa-check-circle fa-2x" aria-hidden="true"></i>
                            {% else %}
                                <span>{{ 'Inactivo'|trans }}</span>
                            {% endif %}</td>
                        <td>
                            <a href="{{ path('admin_article-category_show', { 'id': entity.id }) }}"  class="btn btn-success btn-sx">{{ 'Ver'|trans }}</a>
                            <a href="{{ path('admin_article-category_edit', { 'id': entity.id }) }}"  class="btn btn-info btn-sx">{{ 'Editar'|trans }}</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endblock %}
    {% endembed %}

{% endblock %}
